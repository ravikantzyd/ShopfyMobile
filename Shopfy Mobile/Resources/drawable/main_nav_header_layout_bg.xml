<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_pressed="false">

		<layer-list>
			<item>
				<shape>

					<gradient android:angle="360" android:startColor="@color/secondaryDarkColor" android:endColor="@color/colorAccent"/>
					<stroke android:color="@android:color/white"
							android:width="1dp"/>

					<corners android:radius="10dp"/>

				</shape>
			</item>
		</layer-list>
	</item>

	<item android:state_pressed="true">

		<layer-list>
			<item>
				<shape>

					<gradient android:angle="360" android:startColor="@color/colorAccent" android:endColor="@color/secondaryDarkColor"/>
					<stroke android:color="@android:color/white"
							android:width="1dp"/>

					<corners android:radius="10dp"/>

				</shape>
			</item>
		</layer-list>
	</item>

</selector>
