<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
		<item name="android:textColor">@color/primaryTextColor</item>
    </style>

	<style name="SearchTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
		<item name="colorPrimary">@color/secondaryVeryLightColor</item>
		<item name="colorPrimaryDark">@color/secondaryVeryLightColor</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:textColor">@color/primaryTextColor</item>
	</style>

	<style name="MainToolBarTitleTextAppearenceLargS">
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:textSize">14sp</item>		
	</style>

	<style name="main_nav_menu_layout_style">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">50dp</item>
		<item name="android:padding">5dp</item>
		<item name="android:background">@drawable/main_nav_menu_layout_bg</item>
	</style>

	<style name="main_nav_menu_title_img_style">
		<item name="android:layout_width">32dp</item>
		<item name="android:layout_height">32dp</item>
		<item name="android:layout_gravity">center_vertical</item>
	</style>

	<style name="main_nav_menu_title_style">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:textColor">@color/secondaryDarkColor</item>
	</style>

	<style name="main_nav_menu_expend_img_style">
		<item name="android:layout_width">24dp</item>
		<item name="android:layout_height">24dp</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:layout_alignParentRight">true</item>
	</style>

	<style name="main_nav_sub_menu_title_style">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="main_nav_sub_menu_layout_style">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">5dp</item>
		<item name="android:background">@color/secondaryVeryLightColor</item>
	</style>

	<style name="main_nav_sub_menu_item_layout_style">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">50dp</item>
		<item name="android:padding">5dp</item>
		<item name="android:background">@drawable/main_nav_sub_menu_item_layout_bg</item>
		<item name="android:layout_marginLeft">5dp</item>
		<item name="android:layout_marginRight">5dp</item>
		<item name="android:layout_marginTop">3dp</item>
		<item name="android:layout_marginBottom">3dp</item>
	</style>

</resources>
